{% extends 'base.html.twig' %}
{% block stylesheets %}
    <link rel="stylesheet" href="{{ asset('styles/home.css') }}">
{% endblock %}
{% block title %}Knowledge{% endblock %}

{% block body %}

<header>
    <div class="container">
        <div class="logo">
            <a href="/" class="logo-link"><img src="{{ asset('images/Logo.png') }}" alt="Logo"></a>
                    
                                   
        </div>
        <nav>
            <ul class="nav-links">
                 {% if app.user is not null %}
                    <li><a href="/">Accueil</a></li>

                    <li><a href="/cart">Panier</a></li>
                    <li><a href="/logout">Se déconnecter</a></li>
                 {% else %}
                    <li><a href="/" >Accueil</a></li>
                    <li><a href="/login">Se connecter</a></li>
                    <li><a href="/register">S'inscrire</a></li>
                 {% endif %}
            </ul>
        </nav>

    </div>
</header>
<main>
    <div class="themes-container">
        {% for theme in themes %}
            <div class="theme-card">
                <!-- Remplacez par l'image du thème, par exemple : -->
                <a href="{{ path('app_theme', {'id': theme.id}) }}">
                    <img src="{{ asset('images/themes/' ~ theme.id ~ '.jpg') }}" alt="{{ theme.name }}">
                    <h3>{{ theme.name }}</h3>
                </a>
            </div>
        {% endfor %}
    </div>
</main>
{% endblock %}
