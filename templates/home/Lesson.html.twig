{% extends 'home/index.html.twig' %}

{% block title %}{{ lesson.title }}{% endblock %}

{% block body %}
    <main>
        <h1>{{ lesson.title }}</h1>
        <p>{{ lesson.content | raw }}</p>
        <iframe width="80%" height="315" src="{{ lesson.videoUrl }}" frameborder="0" allowfullscreen></iframe>
        {% if not lessonCompleted %}
            <form method="POST" action="{{ path('lesson_validate', { id: lesson.id }) }}">
                <button type="submit" class="btn btn-success">Valider la leçon</button>
            </form>
        {% else %}
            <button class="btn btn-secondary" disabled>✔ Leçon validée</button>
        {% endif %}
    </main>
{% endblock %}
